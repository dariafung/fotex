{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fotex",
  "version": "0.1.0",
  "identifier": "com.hyjing.fotex",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "fotex",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: https://ipc.localhost http://ipc.localhost; frame-src 'self' asset: https://asset.localhost http://asset.localhost",
      "assetProtocol": {
        "scope": ["$APPCACHE/**", "**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/tectonic"
    ]
  }
}
